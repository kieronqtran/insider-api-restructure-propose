{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
		"noLib": false,
		"moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": true,
    "allowJs": true,
		"outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@insider-api/*": ["*"]
    },
		"typeRoots": [
      "src/typing",
      "node_modules/@types"
		]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
		"**/*.spec.ts",
		"src/migration/**"
  ]
}
